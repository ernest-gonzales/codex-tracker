{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Codex Tracker",
  "identifier": "com.codex.tracker",
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Codex Tracker",
        "width": 1000,
        "height": 780,
        "minWidth": 700,
        "minHeight": 550
      }
    ]
  },
  "build": {
    "frontendDist": "../../web/dist",
    "beforeBuildCommand": "cd ../web && npm run build"
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "category": "Utility",
    "icon": [
      "icons/icon.icns",
      "icons/icon.ico",
      "icons/icon.png",
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png"
    ],
    "copyright": "Copyright (c) 2025 ernest-gonzales",
    "macOS": {
      "hardenedRuntime": true
    }
  }
}
