{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Codex Tracker",
  "version": "0.1.0",
  "identifier": "com.codex.tracker",
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Codex Tracker",
        "width": 1000,
        "height": 780,
        "minWidth": 700,
        "minHeight": 550
      }
    ]
  },
  "build": {
    "frontendDist": "../../web/dist",
    "beforeBuildCommand": "cd ../web && npm run build"
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "category": "Utility",
    "icon": ["icons/icon.png"]
  }
}
